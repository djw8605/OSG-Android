<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout2" android:layout_width="match_parent" android:layout_weight="1">
        <TableRow android:layout_width="match_parent" android:id="@+id/tableRow3" android:layout_height="match_parent" android:layout_weight="1">
            <ImageView android:layout_height="98dp" android:id="@+id/imageView1" android:layout_width="235dp" android:src="@drawable/osg_logo"></ImageView>
            <WebView android:id="@+id/webView1" android:layout_height="match_parent" android:layout_width="match_parent" android:layout_weight="1"></WebView>
        </TableRow>
        <TableRow android:layout_weight="0" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableRow4">
            <Button android:layout_width="match_parent" android:text="@string/viewmonitoring" android:layout_height="match_parent" android:id="@+id/view_monitoring" android:layout_weight="1"></Button>
       		<Button android:layout_width="match_parent" android:text="@string/viewmap" android:layout_height="match_parent" android:id="@+id/view_map" android:layout_weight="2"></Button>
        </TableRow>
    </TableLayout>
    
</LinearLayout>
