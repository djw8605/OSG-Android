<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <ImageView android:src="@drawable/osg_logo" android:layout_height="290dp" android:id="@+id/imageView1" android:layout_weight="0.25" android:layout_width="match_parent"></ImageView>
    <Button android:layout_weight="0.25" android:id="@+id/view_monitoring" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/viewmonitoring"></Button>
    <Button android:layout_weight="0.25" android:id="@+id/view_map" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/viewmap"></Button>
</LinearLayout>
